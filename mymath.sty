\NeedsTeXFormat{LaTeX2e}[1994/06/01]
\ProvidesPackage{mymath}


\newcommand\der[2]{\frac{\partial #1}{\partial #2}} %Shortcut for derivative
\newcommand\totder[2]{\frac{\mathrm{d}#1}{\mathrm{d} #2}} % Total derivative
\newcommand{\md}{\mathrm{d}} %derivation d 
\newcommand{\Real}{\operatorname{Re}} % Real part
\newcommand{\Imag}{\operatorname{Im}} % Imaginary part
\newcommand{\half}{\frac{1}{2}}
\newcommand{\quarter}{\frac{1}{4}}
\newcommand\Int[2]{\int\limits_{ #1}^{#2}} % Integral with limits
% Integral over S_b
\newcommand\intSb[1]{\iint\displaylimits_{S_b}{\left[{#1}\right]}\mathrm{d}S} 
\newcommand{\norm}[1]{\left\lVert#1\right\rVert} % Norm
\newcommand{\inv}[1]{#1^{-1}} %Inverse
\newcommand{\abs}[1]{\vert #1 \vert} %absolute value
\newcommand{\unionlim}[2]{\bigcup\limits_{#1}^{#2}}
\newcommand{\interslim}[2]{\bigcap\limits_{#1}^{#2}}
\newcommand{\sumlim}[2]{\sum\limits_{#1}^{#2}}
\newcommand{\Gc}{\mathcal{G}}
\newcommand{\Bc}{\mathcal{B}}
\newcommand{\Ac}{\mathcal{A}}
\newcommand{\Bb}{\mathbb{B}}
\newcommand{\Cb}{\mathbb{C}}
\newcommand{\Rb}{\mathbb{R}}
